{% extends "layout.html.twig" %}

{% block main %}
    <div style="padding: 20px 50px; display:flex; justify-content:space-between; align-items:center;">
        <h2>Mes Groupes</h2>
        <a href="index.php?route=logout" style="color:#d63031; font-size:0.9rem;">Se déconnecter</a>
    </div>

    <div class="groups-grid">
        <a href="?route=create_group" class="group-card">
            <span style="font-size:2rem; color:var(--cyan);">+</span>
            <span style="color:var(--cyan);">Créer un groupe</span>
        </a>

        {% for group in groups %}
            <a href="?route=affichage_expenses&id={{group.id}}" class="group-card">
                <h3>{{group.name}}</h3>
                <span style="color:#aaa; font-size:0.8rem; margin-top:10px; font-weight:normal;">Voir les dépenses &rarr;</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}