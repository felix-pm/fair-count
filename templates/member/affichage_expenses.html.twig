{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header.html.twig" %}
{% endblock %}

{% block main %}

<a href="index.php?route=reimbursement&id={{groups}}" class="">Régler les remboursements</a> 

{% for expense in expenses %}
    {% if expense.group_id.id == groups %}
        <p>{{expense.date}}</p>
        <p>{{expense.title}}</p>
        <p>{{expense.amount}}</p>
        <p>Payé par:{{expense.user_id.firstname}}</p>
    {% endif %}
{% endfor %}

<a href="?route=expenses&id={{groups}}">Ajouter une dépense</a>

{% endblock %}